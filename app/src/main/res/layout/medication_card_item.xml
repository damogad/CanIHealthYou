<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/image_medication_card"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_medication_card"
        android:background="?attr/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/medication_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="?textAppearanceTitle"
                android:textStyle="bold"
                tools:text="MEDICATION 1" />
        </LinearLayout>

        <TextView
            android:id="@+id/medication_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="?textAppearanceText"
            tools:text="Brief description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Medication_Quantity"
                android:textColor="@android:color/white"
                android:textSize="?textAppearanceText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/medication_quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="?textAppearanceText"
                tools:text="1 PILL" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Medication_Schedule"
                android:textColor="@android:color/white"
                android:textSize="?textAppearanceText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/medication_schedule"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="?textAppearanceText"
                tools:text="8:00" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>